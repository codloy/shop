{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "schemas/*": ["src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "noEmit": true,

    "lib": ["ES2020"]
  },
  "include": ["src/**/*"]
}
