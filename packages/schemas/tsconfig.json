{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    "baseUrl": "src",
    "lib": ["ES2020"],
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"

    // "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/**.spec.ts"]
}
